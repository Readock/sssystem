textbox-help {
    expand:                     false;
    content:                    " Wipe - [ALT + DEL]";
    horizontal-align:           0.5;

    border-radius:                 12px;
    background-color:              @shade-bg;
    text-color:                    white;

    margin:                        0px;
    padding:                       6px;
}

textbox-icon {
    expand:                      true;
    background-color:            transparent;
    text-color:                  inherit;
    margin: 0px 0px 0px 25px;
    content: "  ";
}

