/* config - Clipboard */

configuration {
    modi:                        "dmenu";
    display-dmenu:                "";
    show-icons:                  true;
  	drun-display-format:         "{name}";
    font:                        "JetBrainsMono Nerd Font 14";
}

/* Config and colors ----------------------------------------------- */

@import "config.rasi"

/* Main Window ------------------------------------------------ */
window {
    width:                       38%;
    height:                      45%;
    margin:                      0px;
    padding:                     0px;
}

/* ----- Main Box ----- */
mainbox {
    orientation:                 vertical;
    children:                    [ inputbar, textbox-help, message, listview ];
    background-color:            transparent;

    spacing:                      16px;
    margin:                       0px;
    padding:                      32px;
}

